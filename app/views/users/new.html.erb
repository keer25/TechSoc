<% provide(:title, 'Signup') %>
<h1>Signup</h1>
<div class="row">
      <div class = "col-md-6 col-md-offset-3">
      <% @user = User.new %>
            <%= form_for(@user) do |f| %>
                  <%= f.label :name %>
                  <%= f.text_field :name %>

                  <%= f.label :rollno %>
                  <%= f.text_field :rollno %>

                  <%= f.label :email %>
                  <%= f.text_field :email %>

                  <%= f.label :hostel %>
                  <%= f.text_field :hostel %>

                  <%= f.submit "Create User", class: "btn btn-primary" %>
      <% end %>
      </div>
</div>