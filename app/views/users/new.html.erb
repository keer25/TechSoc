<% provide(:title, 'Signup') %>
<h1>Signup</h1>
<div class="row">
      <div class = "col-md-6 col-md-offset-3">
      <% @user = User.new %>
            <%= form_for(@user) do |f| %>
                  <%= f.label :name %>*
                  <%= f.text_field :name %>
                  <br><br>
                  <%= f.label :rollno %>*
                  <%= f.text_field :rollno %>
                  <br><br>
                  <%= f.label :password %>*
                  <%= f.password_field :password %>
                  <br><br>
                  <%= f.label :password_confirmation %>*
                  <%= f.password_field :password_confirmation %>
                  <br><br>
                  <%= f.label :email %>
                  <%= f.text_field :email %>
                  <br><br>
                  <%= f.label :hostel %>
                  <%= f.text_field :hostel %>
                  <br><br>
                  <%= f.submit "Create User", class: "btn btn-primary" %>
            <% end %>
      </div>
</div>